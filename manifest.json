{
  "manifest_version": 3,
  "name": "PurgeDOM Cleaner",
  "version": "1.0.0",
  "description": "掃除モードで要素を掃除し、元に戻すモードで復活できる拡張機能です。",
  "browser_specific_settings": {
    "gecko": {
      "id": "purgedom-cleaner@local"
    }
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "action": {
    "default_title": "PurgeDOM Cleaner",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
